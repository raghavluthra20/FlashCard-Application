      <Button fx:id="viewMyDeckButton" layoutX="25.0" layoutY="358.0" mnemonicParsing="false" text="View Deck" />
      <Button fx:id="reviseMyDeckButton" layoutX="117.0" layoutY="358.0" mnemonicParsing="false" text="Revise" />
      <Button fx:id="revisePublicDeckButton" layoutX="337.0" layoutY="358.0" mnemonicParsing="false" text="Revise Public Deck" />
