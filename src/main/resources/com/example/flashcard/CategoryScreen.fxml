      <Button fx:id="createPrivateDeckButton" layoutX="442.0" layoutY="83.0" mnemonicParsing="false" onAction="#createPrivateDeck" text="Create Private" />
      <Label fx:id="deckNumber" layoutX="147.0" layoutY="71.0" text="42">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Button fx:id="goBackButton" layoutX="3.0" layoutY="3.0" mnemonicParsing="false" onAction="#goBack" text="Go Back">
         <font>
            <Font size="10.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
